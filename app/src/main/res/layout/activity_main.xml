<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regbackg"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="75dp"
                android:layout_marginRight="75dp"
                android:fontFamily="serif"
                android:text="Register"
                android:textColor="@color/black"
                android:textColorHighlight="#670404"
                android:textColorHint="#171616"
                android:textColorLink="#171616"
                android:textSize="38sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/Firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHighlight="#670404"
                android:textColorHint="#171616"
                android:textColorLink="#171616"/>


            <EditText
                android:id="@+id/Midddlename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:hint="Middle Name"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHighlight="#670404"
                android:textColorHint="#171616"
                android:textColorLink="#171616"/>

            <EditText
                android:id="@+id/Lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHighlight="#670404"
                android:textColorHint="#171616"
                android:textColorLink="#171616"/>


            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:drawableLeft="@drawable/ic_baseline_phone_android_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:hint="Enter your  Mobile NO."
                android:inputType="phone"
                android:textColor="@color/black"
                android:textColorHighlight="#670404"
                android:textColorHint="#171616"
                android:textColorLink="#171616"/>


            <EditText
                android:id="@+id/emailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:hint="Enter your  Email ID"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHighlight="#670404"
                android:textColorHint="#171616"
                android:textColorLink="#171616"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp">


                <Spinner

                    android:id="@+id/spinner"
                    android:layout_width="172dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/gender"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/age_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"

                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="Age"

                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="#670404"
                    android:textColorHint="#0E0D0D"
                    android:textColorLink="#100F0F"

                    />






            </LinearLayout>

            <EditText


                android:id="@+id/Password"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ic_baseline_security_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Enter  Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHighlight="#670404"
                android:textColorHint="#171616"
                android:textColorLink="#171616" />


            <EditText
                android:id="@+id/Confirmpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:drawableLeft="@drawable/ic_baseline_security_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Confirm Password"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="5dp"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHighlight="#670404"
                android:textColorHint="#171616"
                android:textColorLink="#171616"/>



            <Button
                android:id="@+id/signupbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="serif"
                android:text="Sign UP"
                android:textColor="#056309"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="5dp"
                app:backgroundTint="#FFC310"/>


            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="40dp"

                android:text="Already have an account? Login"
                android:textColor="#120F0F"

                android:textColorHighlight="#151414"
                android:textColorHint="#4CAF50"
                android:textColorLink="#151313" />


        </LinearLayout>


    </RelativeLayout>




</ScrollView>